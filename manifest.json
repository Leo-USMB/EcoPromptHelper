{

  "manifest_version": 2,
  "name": "EcoPrompt Helper",
  "description": "Displays a sidebar that lets you take notes on web pages with chatbot and give you a checklist.",
  "version": "1.1",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "58.0"
    }
  },
  "icons": {
  "48": "icons/icon-48.png",
  "96": "icons/icon-96.png"
  },
  "sidebar_action": {
    "default_icon": "icons/icon-48.png",
    "default_title" :  "EcoPrompt Helper",
    "default_panel": "sidebar/panel.html"
  },

  "permissions": ["storage", "tabs", "clipboardWrite", "clipboardRead"],

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }

}
